{
    "version": 1,
    "formatters": {
        "console": {
            "()": "config.formatter.BuacheFormatter"
        },
        "file": {
            "format": "[%(asctime)s] [%(name)s] [%(funcName)s] [%(levelname)s] [%(lineno)d] %(message)s"
        }
    },
    "handlers": {
        "console": {
            "level": "TRACE",
            "formatter": "console",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "level": "DEBUG",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "file",
            "filename": "logs/application.log",
            "backupCount": 4,
            "maxBytes": 1306867,
            "encoding": "UTF8"
        },
        "detailed": {
            "level": "TRACE",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "file",
            "filename": "logs/detailed_application.log",
            "backupCount": 4,
            "maxBytes": 1306867,
            "encoding": "UTF8"
        }
    },
    "loggers": {
        "": {
            "handlers": ["console", "file", "detailed"],
            "level": "TRACE"
        }
    }
}
