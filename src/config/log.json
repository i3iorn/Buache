{
    "version": 1,
    "disable_existing_loggers": "True",
    "formatters": {
        "console": {
            "format": "[%(name)20s] [%(funcName)20s] [%(levelname)10s] [%(lineno)5d] :: %(message)s"
        },
        "file": {
            "format": "%(asctime)s - %(name)s - %(funcName)s - %(levelname)s - %(lineno)d - %(message)s"
        }
    },
    "handlers": {
        "console": {
            "level": "DEBUG",
            "formatter": "console",
            "class": "logging.StreamHandler",
            "stream": "ext://sys.stdout"
        },
        "file": {
            "level": "TRACE",
            "class": "logging.handlers.RotatingFileHandler",
            "formatter": "file",
            "filename": "../data/logs/application.log",
            "backupCount": 5,
            "maxBytes": 2306867,
            "encoding": "UTF8"
        }
    },
    "loggers": {
        "": {
            "handlers": ["console", "file"],
            "level": "TRACE"
        },
        "Application": {
            "handlers": ["console", "file"],
            "level": "DEBUG"
        },
        "src.queue": {
            "handlers": ["console", "file"],
            "level": "VERBOSE",
            "propagate": 0
        }
    }
}